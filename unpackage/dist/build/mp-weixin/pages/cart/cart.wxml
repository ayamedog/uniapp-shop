<view class="cart"><view class="revice_address_row"><block wx:if="{{!address.userName}}"><view class="address_btn"><button data-event-opts="{{[['tap',[['chooseAddress',['$event']]]]]}}" class="cu-btn block lg round bg-red" bindtap="__e"><text class="cuIcon-add"></text>添加收货地址</button></view></block><block wx:else><view class="user_info_row"><view class="user_info"><view>{{"收货人："+address.userName}}</view><view>{{address.all}}</view></view><view class="user_phone">{{address.telNumber}}</view></view></block></view><block wx:if="{{cart.length!==0}}"><view class="cart_content"><view class="cart_title"><view class="cu-bar justify-center bg-white"><view class="action sub-title"><text class="text-xl text-bold text-red">购物车</text><text class="bg-red" style="width:2rem;"></text></view></view></view><view class="cart_main"><block wx:for="{{cart}}" wx:for-item="item" wx:for-index="index" wx:key="goods_id"><view class="cart_item"><checkbox-group data-event-opts="{{[['change',[['itemChange',['$0'],[[['cart','goods_id',item.goods_id,'goods_id']]]]]]]}}" class="cart_chk-wrap" bindchange="__e"><checkbox class="{{['round red',item.checked?'checked':'']}}" checked="{{item.checked}}"></checkbox></checkbox-group><navigator class="cart_img_warp"><image mode="widthFix" src="{{item.goods_small_logo||'https://ww1.sinaimg.cn/large/007rAy9hgy1g24by9t530j30i20i2glm.jpg'}}"></image></navigator><view class="cart_info_warp"><view class="goods_name">{{item.goods_name}}</view><view class="goods_price_warp"><view class="goods_price text-price text-red">{{item.goods_price}}</view><view class="cart_num_tool"><button class="cu-btn bg-gray sm num_edit" data-id="{{item.goods_id}}" data-operation="{{-1}}" data-event-opts="{{[['tap',[['itemNumEdit',['$event']]]]]}}" bindtap="__e">-</button><view class="goods_num">{{item.num}}</view><button class="cu-btn bg-gray sm num_edit" data-id="{{item.goods_id}}" data-operation="{{1}}" data-event-opts="{{[['tap',[['itemNumEdit',['$event']]]]]}}" bindtap="__e">+</button></view></view></view></view></block></view></view></block><block wx:else><view class="cart_empty"><image class="cart_empty_img" mode="widthFix" src="../../static/icon/cartEmpty.png"></image><view>购物车里空空如也~</view><navigator url="../category/category" open-type="switchTab"><button class="cu-btn bg-cyan shadow">去逛逛</button></navigator></view></block><view class="footer_tool"><view class="all_chk_warp"><checkbox-group data-event-opts="{{[['change',[['itemAllChecked',['$event']]]]]}}" bindchange="__e"><checkbox class="{{['checkbox red',allChecked?'checked':'']}}" checked="{{allChecked}}"></checkbox><text>全选</text></checkbox-group></view><view class="total_price_warp"><view class="total_price">合计：<text class="total_price_text text-price text-red">{{totalPrice}}</text></view><view>包含运费</view></view><view data-event-opts="{{[['tap',[['pay',['$event']]]]]}}" class="order_pay_warp" bindtap="__e">{{'结算('+totalNum+')'}}</view></view><view class="{{['cu-modal',modalName=='DialogModal1'?'show':'']}}"><view class="cu-dialog"><view class="cu-bar bg-white justify-end"><view class="content">提示</view></view><view class="padding-xl">是否确定删除购物车商品</view><view class="cu-bar bg-white justify-end"><view class="action"><button class="cu-btn line-green text-green" data-bool="{{false}}" data-event-opts="{{[['tap',[['hideModal',['$event']]]]]}}" bindtap="__e">取消</button><button class="cu-btn bg-green margin-left" data-bool="{{true}}" data-event-opts="{{[['tap',[['hideModal',['$event']]]]]}}" bindtap="__e">确定</button></view></view></view></view><view class="{{['cu-modal',modalName=='Modal'?'show':'']}}"><view class="cu-dialog"><view class="cu-bar bg-white justify-end"><view class="content">提示</view><view data-event-opts="{{[['tap',[['hideModal2',['$event']]]]]}}" class="action" bindtap="__e"><text class="cuIcon-close text-red"></text></view></view><view class="padding-xl">{{''+modalText+''}}</view></view></view></view>